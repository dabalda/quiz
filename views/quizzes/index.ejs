
<h2> <%= title || "Quizzes" %> </h2>

<form method="get" action=<%= url %>>
  <input type="text" name="search" value="<%= search %>" placeholder="Pregunta"></input>
  <input type="submit" value="Buscar">
</form>
<% if (quizzes.length === 0) { %>
  <p>No se han encontrado preguntas.</p>  
<% } %>
<table>
  <% for (var i in quizzes) { %>        
     <tr>
        <td>
          <% var quiz = quizzes[i]; %>      
          <%- include ../favourites/_stars.ejs %>
        </td>
        <td class="center">
          <% if (quizzes[i].Attachment) { %>
             <img class="quizImage" src="<%= quizzes[i].Attachment.url %>"/>
          <% } else { %> 
             <img class="quizImage" src="/images/question.png"/>
          <% } %> 
        </td>
        <td>
           <a href="/quizzes/<%= quizzes[i].id %>"><%= quizzes[i].question %></a>
        </td>
        <td class="center">
        <% if (quizzes[i].AuthorId) {
              if (quizzes[i].Author) { %>
                Creado por <a href="/users/<%= quizzes[i].AuthorId %>"><%= quizzes[i].Author.username %></a>
          <% } else { %>
                Usuario eliminado
          <% } %>
        <% } else { %>
              An√≥nimo
        <% } %>
        </td>
        <% if (session.user) { %>
          <% if (session.user.isAdmin || session.user.id === quizzes[i].AuthorId) { %>
            <td>
               <a href="/quizzes/<%= quizzes[i].id %>/edit"><button>Editar</button></a>
            </td>
            <td>
               <a href="/quizzes/<%= quizzes[i].id %>?_method=DELETE" 
                  onClick="return confirm('Borrar: <%= quizzes[i].question %>');">
                  <button>Borrar</button>
               </a>
            </td>
          <% } %> 
        <% } %>
     </tr> 
  <% } %>
</table>

<% if (session.user) { %>
  <a href="/quizzes/new"><button type="button">Crear pregunta</button></a>
<% } %>