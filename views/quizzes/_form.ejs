	

<input type='hidden' name='redir' value='<%= redir %>'>
<div class="form-group">	
	<label for="preg">Pregunta:</label>
	<input type="text" id="preg" class="form-control" name="question" value="<%= quiz.question %>" placeholder="Pregunta" autofocus=""/>
</div>
<div class="form-group">
	<label for="resp">Respuesta:</label>
	<input type="text" id="resp" class="form-control" name="answer" value="<%= quiz.answer %>" placeholder="Respuesta" autofocus=""/>
</div>
<div class="form-group">
	<label for="img">Imagen:</label>
	<input type="file" id="img" class="form-control" accept="image/*" name="image" />
</div>
<div class="btn-group">
	<a href="/quizzes" class="btn btn-warning" role="button">Cancelar</a>
	<input class="btn btn-success" type="submit" value="Salvar"
		   onClick="this.disabled = true; document.getElementById('progress-bar').style.visibility = 'visible'; this.form.submit();" >
</div>
<div id="progress-bar" class="progress-bar progress-bar-striped active" style="width: 100%; visibility: hidden; margin-top: 10px;">
    Enviando...
</div>
